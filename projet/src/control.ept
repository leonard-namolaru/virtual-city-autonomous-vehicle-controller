open Globals


node controller(sens : sensors; iti : itielts)
       returns (rspeed : wheels; arriving : bool)
let
  (* rspeed = { left = 100.0; right = 100.0 }; *)
  arriving = false;

  () = dbg_sensors("sensors : ", sens) ;

  rspeed = if sens.s_road.green > 0 then  { left = 150.0; right = 100.0 } else if sens.s_road.red > 0  then  { left = 100.0; right = 150.0 } else { left = 100.0; right = 100.0 };
tel
